{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"pretty": true,
		"types": [
			"jest",
			"node"
		],
		"sourceMap": true,
		"target": "es6",
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@Interfaces/*": [
				"src/Interfaces/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*.ts"
	]
}